@model IEnumerable<Reference>
@{

    ViewData["Title"] = "Index";
}

<div class="row pt-4">
    <div class="col-6 text-start">
        <a asp-controller="" asp-action="" class="btn btn-danger">
            <i class="bi bi-plus-circle"></i> &nbsp Add a Reference Record
        </a>
    </div>
    <div class="col-6">
        <h2 class="text-primary"></h2>
    </div>

</div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h2 class="text-info text-center" style="font-weight:bolder">Reference List</h2>
        </div>
        <div class="col-6 text-end">
            @*<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp Create a Category
                </a>*@
        </div>
    </div>

    <br />
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Language
                </th>
                <th>
                    Keyphrase
                </th>
                <th>
                    Project Name
                </th>
                <th>
                    Link
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">
                        @obj.Language
                    </td>
                    <td width="30%">
                        @obj.Keyphrase
                    </td>
                    <td width="30%">
                        @obj.ProjectName
                    </td>
                    <td width="10%">
                        <a href="@obj.Link">
                            <button class="btn btn-success">
                                Link

                            </button>
                        </a>

                    </td>
                    <td width="10%">
                        <div class=" w-75 btn-group" role="group">
                            <a @*asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"*@>
                                <button class="btn btn-info">
                                    Edit
                                </button>
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group danger" role="group">
                            <a @*asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"*@>
                                <button class="btn btn-warning">

                                    Delete
                                </button>
                            </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
