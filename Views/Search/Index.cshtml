@model IEnumerable<Reference>


@{

    ViewData["Title"] = "CR2 - List";
}

@if (Model.Any())
{
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-12">
                <h2 class="text-info text-center" style="font-weight:bolder">Search Results</h2>
            </div>
            <div class="col-6 text-end">
            </div>
        </div>

        <br />
        <br />

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th class="text-center">
                        Language
                    </th>
                    <th class="text-center">
                        Keyphrase
                    </th>
                    <th class="text-center">
                        Project Name
                    </th>
                    <th class="text-center">
                        Link
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="10%">
                            @obj.Language
                        </td>
                        <td width="30%">
                            @obj.Keyphrase
                        </td>
                        <td width="30%">
                            @obj.ProjectName
                        </td>
                        <td width="10%" class="text-center">
                            <a href="@obj.Link" target=“_blank”>
                                <button class="btn btn-success">
                                    Link

                                </button>
                            </a>

                        </td>
                        <td width="10%" class="text-center">
                            <div class=" w-75 btn-group" role="group">
                                <a asp-controller="Reference" asp-action="Edit" asp-route-id="@obj.Id">
                                    <button class="btn btn-info">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </button>
                                </a>
                            </div>
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group danger" role="group">
                                <a asp-controller="Reference" asp-action="Delete" asp-route-id="@obj.Id">
                                    <button class="btn btn-warning">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-12">
                <h2 class="text-info text-center" style="font-weight:bolder">Search Results</h2>
            </div>
            <div class="col-6 text-end">
            </div>
        </div>

        <br />
        <br />
        <h3>Sorry, nothing with this search params</h3>
    </div>

}
<div class="row pt-4">
<a class="btn btn-secondary" asp-controller="Reference" asp-action="Index" style="width:150px">
    Back to List
</a>
    </div>
